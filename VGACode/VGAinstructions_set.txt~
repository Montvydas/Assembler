timer_isr:
//first to clear the last position of mouse 
	load_val b 01   //vga background
	store B2 b		
	
	load a 08		//memory vga X
	store B0 a
	
	load a 09		//memory vga Y
	store B1 a
	
//set new address	
	load_val a 00	//vga foreground
	store B2 a  	 

	load a 02   	//mouse X address	
	store B0 a		//vga X
	store 08 a		//memory vga X
	store C0 a		//LEDs
	
	load a 03		//mouse Y address	
	store B1 a		//vga Y
	store 09 a		//memory vga Y	
	store D0 a		//7seg
goto_idle	

mouse_isr:
	load a A1	//X location
	store 02 a 
	
	load a A2	//Y location
	store 03 a
goto_idle
